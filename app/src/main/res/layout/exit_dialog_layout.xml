<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:background="@color/changeableWhite"
        app:cardBackgroundColor="@color/changeableWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp">

                <!--<ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mem_black"
                    android:layout_gravity="center"
                    android:alpha="0.9"
                    android:contentDescription="@string/todo" />
-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trafyc"
                    android:fontFamily="@font/typographica_regular"
                    android:layout_marginStart="-1dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/changeableSmokyBlack"
                    android:padding="5dp"
                    app:drawableStartCompat="@drawable/ic_mem_black" />

            </LinearLayout>



            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_gravity="center_horizontal"

                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                ads:adSize="MEDIUM_RECTANGLE"
                ads:adUnitId="ca-app-pub-7732231090579598/8433222623">
            </com.google.android.gms.ads.AdView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_you_want_to_exit_otrafyc"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/changeableSmokyBlack"
                android:alpha="0.7"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/lightgrayColor1"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/cancelExitAppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/cancel"
                    android:textStyle="normal"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:background="@drawable/exit_dialog_cancel_button_backgrnd"
                    android:layout_marginEnd="10dp"
                    />

                <Button
                    android:id="@+id/exitAppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:text="@string/exit"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/White"
                    android:background="@drawable/exit_dialog_exit_button_backgrnd"/>



            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>