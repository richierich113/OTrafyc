<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/transparentColor"
    android:background="@color/transparentColor"
    android:orientation="vertical"
    android:id="@+id/search_routeModeLayout"
    android:visibility="gone"
    app:strokeWidth="0dp"
   >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scrollbarSize="0dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/transparentColor"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/car_mode"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/changeableWhite"

                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="20dp"
                android:padding="5dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/changeableWhite"
                app:strokeWidth="2dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/car_mode" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/train_mode"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/changeableWhite"

                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/changeableWhite"
                app:strokeWidth="2dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/train_mode" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/walking_mode"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/changeableWhite"

                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/changeableWhite"
                app:strokeWidth="2dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/walking_mode"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bike_mode"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/changeableWhite"

                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/changeableWhite"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"
                    android:src="@drawable/bike_mode" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </HorizontalScrollView>


</com.google.android.material.card.MaterialCardView>