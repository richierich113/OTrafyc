<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/changeableBlue12"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".SettingsActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/CustomToolbarStyle2"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:popupTheme="@style/CustomPopupStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/BackArrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/contact_us_backbuton_onclick_ripple_backgrnd"
                android:clickable="true"
                android:focusable="true"
                android:onClick="OnBackButtonClick"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/whiteToPale"
                android:contentDescription="@string/todo" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/whiteToPale"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideOverlay"
        android:transitionName="menu_to_Activities_transition">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:background="@color/White"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/location_accuracy_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"

                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:onClick="locationAccuracy"

                        android:paddingStart="20dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:id="@+id/location_accuracy_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"

                            android:padding="2dp"
                            android:text="@string/location_accuracy"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp"
                            android:transitionName="contactUs_to_feedback_title_transition" />

                        <TextView
                            android:id="@+id/location_accuracy_subtext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/location_accuracy_head"
                            android:layout_marginStart="0dp"
                            android:text="@string/get_tips_to_optimize_your_location"
                            android:textAllCaps="false"
                            android:textColor="@color/grayColor"
                            android:textSize="14sp"
                            android:transitionName="contactUs_to_feedback_form_transition" />

                        <ImageView
                            android:id="@+id/settings_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_navigate_next"
                            app:tint="@color/grayColor"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:background="@color/grayColor" />


                    <RelativeLayout
                        android:id="@+id/location_settings_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:onClick="openLocationAccessSetting"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:id="@+id/location_settings_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"

                            android:padding="2dp"
                            android:text="@string/location_settings"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp"
                            android:transitionName="contactUs_to_feedback_title_transition" />


                        <ImageView
                            android:id="@+id/settings_img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_navigate_next"
                            app:tint="@color/grayColor"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:background="@color/grayColor" />


                    <RelativeLayout
                        android:id="@+id/privacy_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:onClick="openPrivacyPolicyPage"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:transitionName="menu_to_Activities_transition"
                        >


                        <TextView
                            android:id="@+id/privacy_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"

                            android:padding="2dp"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp" />


                        <ImageView
                            android:id="@+id/settings_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_navigate_next"
                            app:tint="@color/grayColor"

                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:background="@color/grayColor" />

                    <RelativeLayout
                        android:id="@+id/terms_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:onClick="openTermsPage"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:transitionName="menu_to_Activities_transition">


                        <TextView
                            android:id="@+id/terms_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"

                            android:padding="2dp"
                            android:text="@string/terms_of_service"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp" />


                        <ImageView
                            android:id="@+id/settings_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_navigate_next"
                            app:tint="@color/grayColor"

                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:background="@color/grayColor" />


                    <RelativeLayout
                        android:id="@+id/theme_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/theme_background"

                        android:clipChildren="true"
                        android:focusableInTouchMode="false"

                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:transitionName="menu_to_Activities_transition">


                        <TextView
                            android:id="@+id/theme_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_marginStart="0dp"
                            android:padding="2dp"
                            android:text="@string/theme"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/theme_mode_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/theme_text"
                            android:text="@string/YouSetDayMode"
                            android:textColor="@color/grayColor"
                            android:textSize="14sp" />


                        <Button
                            android:id="@+id/theme_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:background="@color/changeableWhite"
                            android:src="@drawable/ic_navigate_next"
                            android:text="@string/DayMode"
                            android:textAllCaps="false"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp"
                            app:tint="@color/grayColor"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/lightgrayColor">


            </LinearLayout>-->


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/changeableWhite"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:background="@color/changeableWhite"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:alpha="0.7"
                        android:text="@string/about"
                        android:textColor="@color/UnchangeableBlue1"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/otrafyc_rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:id="@+id/otrafyc_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"

                            android:padding="2dp"
                            android:text="@string/otrafyc"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/otrafyc_head"
                            android:text="@string/_2021_onim_technologies"
                            android:textAllCaps="false"
                            android:textColor="@color/grayColor"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/version_rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/contact_us_gray_ripple_backround"
                        android:clickable="true"
                        android:clipChildren="true"
                        android:contextClickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:padding="0dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:id="@+id/review_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:padding="2dp"
                            android:text="@string/version"
                            android:textColor="@color/changeableSmokyBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/review_head"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/_1_1_2"
                            android:textAllCaps="false"
                            android:textColor="@color/grayColor"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_weight="1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7732231090579598/8433222623">
    </com.google.android.gms.ads.AdView>

</LinearLayout>