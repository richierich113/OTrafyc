<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/blue10"
    tools:targetApi="LOLLIPOP">

    <item>
        <shape  android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="@color/changeableWhite"
                android:startColor="@color/changeableWhite"
                android:endColor="@color/changeableWhite"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="0.2dp"
                android:color="#25c8ef"
                />
        </shape>

    </item>
</ripple>


