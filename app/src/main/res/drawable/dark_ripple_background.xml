<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/layoutRegisterColor"
    tools:targetApi="LOLLIPOP">

    <item>
        <shape  android:shape="rectangle" >
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="@color/darkBlueBlackColor"
                android:startColor="@color/darkBlueBlackColor"
                android:endColor="@color/darkBlueBlackColor"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="400dp"
                android:height="58dp"
                />
            <stroke
                android:width="0dp"
                android:color="@color/darkBlueBlackColor"
                />
        </shape>

    </item>
</ripple>


