<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/lightgrayColor"
    tools:targetApi="LOLLIPOP">

    <item>
        <shape  android:shape="rectangle" >
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="@color/blue9"
                android:startColor="@color/blue9"
                android:endColor="@color/blue9"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="200dp"
                android:height="20dp"
                />
            <stroke
                android:width="0dp"
                android:color="@color/blue2"
                />
        </shape>

    </item>
</ripple>


